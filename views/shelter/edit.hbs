<h1>Edit Shelter</h1>

<h2>Edit {{shelter.shelterName}}</h2>


<form method="POST" action="/shelters/{{id}}?_method=POST">
  <div>
    <label for="image">Image URL</label>
    <input type="text" name="shelterImage" value="{{shelter.shelterImage}}">
  </div>

  <div>
    <label for="name">Name of Shelter</label>
    <input type="text" name="name" value="{{shelter.shelterName}}">
  </div>
  
  <div>
    <label for="streetName">Street Name</label>
    <input type="text" name="streetName" value="{{shelter.streetName}}">
  </div>

  <div>
    <label for="city">City</label>
    <input type="text" name="city" value="{{shelter.city}}">
  </div>

  <div>
    <label for="state">State</label>
    <input type="text" name="state" value="{{shelter.state}}">
  </div>


<input type="submit" value="Submit"/>
<a href="/shelters/{{id}}">Cancel
</a>  

</form>


