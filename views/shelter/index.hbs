<div class="shelter-index-container">
    <h2>Mother of Horus Shelters</h2>

    <ul class="none">


        {{#each shelters}}

        <div class="shelter-container">
            <div>
                <li>
                    <h2>
                        <a href="/shelters/{{_id}}">{{shelterName}}</a>
                    </h2>
                </li>
                <li>
                    <a href="/shelters/{{_id}}">
                        <img class="image " src="{{shelterImage}} " alt="no img ">
                    </a>
                </li>
                <li>
                    <h3>{{city}}, {{state}}</h3>
                </li>

            </div>
        </div>

        {{/each}}

    </ul>

    <div class="button-bottom ">
        <a href="/shelters/new ">
            <button class="btn btn-success ">Add New Shelter</button>
        </a>
        <a href="/users ">
            <button class="btn btn-warning "> Sign Out
            </button>
        </a>


    </div>
</div>